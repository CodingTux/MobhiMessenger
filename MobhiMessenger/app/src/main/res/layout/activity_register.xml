<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="#F9F7F7  " android:elevation="10dp"
        android:outlineAmbientShadowColor="#929292  ">
    <EditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_reg"
            android:background="@drawable/rounded_corners" android:ellipsize="middle"
            app:layout_constraintEnd_toEndOf="@+id/profilePicture_register" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/profilePicture_register"
            android:layout_marginTop="48dp"
            android:paddingLeft="20dp"
            android:hint="Username" app:layout_constraintHorizontal_bias="0.537"
            app:layout_constraintTop_toBottomOf="@+id/profilePicture_register"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_reg"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="@+id/username_reg"
            app:layout_constraintStart_toStartOf="@+id/username_reg" android:background="@drawable/rounded_corners"
            android:hint="Email"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/username_reg" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_reg"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="@+id/email_reg"
            android:background="@drawable/rounded_corners" android:hint="Password" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/email_reg"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/email_reg"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="Register"
            android:layout_width="296dp"
            android:layout_height="61dp"
            android:id="@+id/reg_button" app:layout_constraintEnd_toEndOf="@+id/password_reg"
            android:textColor="#929292  "
            app:layout_constraintStart_toStartOf="@+id/password_reg" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/password_reg"
            android:background="@drawable/rounded_corners_button"/>
    <TextView
            android:text="Already Registered? Login Here..."
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#929292  "
            android:layout_height="18dp"
            android:id="@+id/loginHere_text" app:layout_constraintEnd_toEndOf="@+id/username_reg"
            app:layout_constraintStart_toStartOf="@+id/username_reg"
            app:layout_constraintTop_toBottomOf="@+id/reg_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.328"/>
    <Button
            android:background="@mipmap/dpregister"
            android:textColor="#57F9F7F7"
            android:layout_width="177dp"
            android:layout_height="177dp"
            android:id="@+id/profilePicture_register" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:elevation="10dp"
            android:outlineAmbientShadowColor="#59FFFFFF" android:outlineSpotShadowColor="#43FFFFFF"
            app:layout_constraintHorizontal_bias="0.502"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="177dp"
            android:layout_height="177dp"
            app:layout_constraintEnd_toEndOf="@+id/profilePicture_register"
            app:layout_constraintStart_toStartOf="@+id/profilePicture_register"
            app:layout_constraintBottom_toBottomOf="@+id/profilePicture_register"
            app:layout_constraintTop_toTopOf="@+id/profilePicture_register"
            android:id="@+id/select_circularImage_register" android:background="#F9F7F7"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Profile Picture"
            android:layout_width="159dp"
            android:layout_height="23dp"
            android:id="@+id/profilePicture_text_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textAlignment="center" android:textColor="#929292  " android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/select_circularImage_register" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.502"/>
</android.support.constraint.ConstraintLayout>