<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp" android:background="#F9F7F7  ">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/profilePicture_latest_message" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_latest_message" app:layout_constraintStart_toEndOf="@+id/profilePicture_latest_message"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/latestMessage_latest_message"
            app:layout_constraintVertical_chainStyle="packed" android:background="#F9F7F7  "
            android:textColor="@android:color/black" android:textStyle="bold|italic"/>
    <TextView
            android:text="Latest Message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/latestMessage_latest_message" app:layout_constraintStart_toEndOf="@+id/profilePicture_latest_message"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_latest_message"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp" android:background="#F9F7F7  "/>
</android.support.constraint.ConstraintLayout>